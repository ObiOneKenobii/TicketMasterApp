<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketMaster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketMasterMVC.styles.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="header-top">
        <div class="logo-section">
            <img src="https://upload.wikimedia.org/wikipedia/en/a/a4/Flag_of_the_United_States.svg" alt="American Flag" />
            <h1>TicketMaster</h1>
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Search events..." />
        </div>
        <div class="login-section">
            <partial name="_LoginPartial" />
        </div>
    </header>

    <style>
        .header-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #f8f9fa;
            border-bottom: 2px solid #007BFF;
            gap: 10px; /* Add spacing between sections */
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .logo-section img {
                width: 20px; /* Reduce flag size */
                height: 15px;
            }

            .logo-section h1 {
                margin: 0;
                font-size: 20px; /* Slightly smaller logo text */
                color: #007BFF;
            }

        .search-bar {
            flex: 1; /* Allow search bar to shrink */
            margin: 0 10px;
        }

            .search-bar input[type="text"] {
                width: 60%; /* Reduce the size of the search box */
                max-width: 400px; /* Prevent it from being too large */
                padding: 6px;
                border: 1px solid #007BFF;
                border-radius: 5px;
                font-size: 14px;
            }

        .login-section {
            display: flex;
            gap: 10px;
            align-items: center;
        }

            .login-section a {
                text-decoration: none;
                color: #007BFF;
                font-size: 14px;
            }

                .login-section a:hover {
                    text-decoration: underline;
                }
    </style>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-bottom">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TicketMaster</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">Events</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                            </li>
                          
                        </ul>
                        
                    </div>
                </div>
            </nav>
            &copy; 2024 - TicketMaster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <style>
        /* Sticky bottom navbar styles */
        .navbar-bottom {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #007BFF;
            color: white;
            z-index: 1000;
        }

            .navbar-bottom .nav-link {
                color: white;
                text-decoration: none;
            }

                .navbar-bottom .nav-link:hover {
                    color: #d1ecf1;
                }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #007BFF;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-track {
            background-color: #f1f1f1;
        }

        /* Search bar styles */
        .search-bar {
            text-align: center;
            margin: 10px auto;
        }

            .search-bar input[type="text"] {
                width: 50%;
                padding: 8px;
                border: 2px solid #007BFF;
                border-radius: 5px;
                font-size: 16px;
            }

        /* Top header with American flag */
        .header-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #f8f9fa;
            border-bottom: 2px solid #007BFF;
        }

            .header-top .logo-section {
                display: flex;
                align-items: center;
            }

                .header-top .logo-section img {
                    width: 30px;
                    height: 20px;
                    margin-right: 10px;
                }

                .header-top .logo-section h1 {
                    margin: 0;
                    font-size: 24px;
                    color: #007BFF;
                }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
