@model IEnumerable<TicketMaster.Models.Beverage>

@{
    ViewData["Title"] = "Beverages";
}

<h2 class="text-center mt-4">Beverages Menu</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var beverage in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@beverage.CoverImageUrl" class="card-img-top" alt="@beverage.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@beverage.Name</h5>
                        <p class="card-text">Size: @beverage.Size</p>
                        <p class="card-text">Quantity: @beverage.Quantity</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Edit", "Beverages", new { id = beverage.Id })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", "Beverages", new { id = beverage.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a href="@Url.Action("Create", "Beverages")" class="btn btn-success">Add New Beverage</a>
        </div>
    </div>
</div>
