@model TicketMaster.Models.Cart

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Cart</h2>
    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <label asp-for="Beverages" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Beverages" class="form-control" placeholder="Edit beverages" />
                <span asp-validation-for="Beverages" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="TotalPrice" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TotalPrice" class="form-control" placeholder="Edit total price" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
