@model TicketMaster.Models.Cart

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Cart</h2>

    <h4 class="text-danger">Are you sure you want to delete this cart?</h4>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Beverages</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.Beverages</p>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Total Price</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.TotalPrice</p>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
