@model IEnumerable<TicketMaster.Models.Ticket>

@{
    ViewData["Title"] = "Past Events";
}

<h2 class="text-center">Past Music Events</h2>

<p class="lead text-center">
    Relive the unforgettable moments from past concerts, festivals, and music events that made history. Experience the energy, passion, and creativity that flowed through these events and the incredible artists who graced the stage.
</p>

<div class="container">
    @if (Model.Any())
    {
        <div class="row justify-content-center">
            @foreach (var ticket in Model)
            {
                <div class="col-md-8 mb-5">
                    <div class="card shadow-lg border-0" style="width: 100%; background-color: #f8f9fa;">
                        <div class="card-header text-white" style="background-color: #343a40;">
                            <h5 class="card-title">@ticket.EventName</h5>
                            <p class="card-subtitle mb-2 text-light">@ticket.EventDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <img src="https://picsum.photos/600/400?random=@ticket.Id" class="card-img" alt="Event Image" style="width: 100%; border-radius: 8px;">
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">About the Event</h6>
                                    <p>
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus lacinia euismod lorem, a auctor nisi consectetur id. Duis sollicitudin quam nec ipsum fermentum, vel posuere ante condimentum.
                                    </p>
                                    <h6 class="text-muted">Memorable Moments</h6>
                                    <ul>
                                        <li>A standing ovation from the audience</li>
                                        <li>Unforgettable performances that left the crowd speechless</li>
                                        <li>Epic collaborations between artists</li>
                                    </ul>
                                    <p class="mt-4">
                                        <strong>Special Memories:</strong><br>
                                        - Audience participation<br>
                                        - Behind-the-scenes glimpses<br>
                                        - Exclusive artist interviews
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <p>Location: <strong>@ticket.Location</strong></p>
                            <p class="mb-0"><strong>Thank you for being part of these unforgettable experiences!</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No past events found.</p>
    }
</div>
<style>
    /* Custom Styling for Upcoming and Past Events */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
        }

    .card-img {
        border-radius: 8px;
    }

    .card-header {
        background-color: #007bff; /* Bright blue header for better visibility */
        padding: 15px;
        border-radius: 8px 8px 0 0;
    }

    .card-body {
        font-family: 'Arial', sans-serif;
    }

    .card-footer {
        background-color: #f1f1f1;
        font-size: 0.9rem;
        text-align: center;
        padding: 10px;
        border-radius: 0 0 8px 8px;
    }

    .lead {
        font-size: 1.2rem;
        color: #555;
    }
</style>