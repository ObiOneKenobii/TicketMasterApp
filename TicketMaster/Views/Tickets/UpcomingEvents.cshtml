@model IEnumerable<TicketMaster.Models.Ticket>

@{
    ViewData["Title"] = "Upcoming Events";
}

<h2 class="text-center">Upcoming Music Events</h2>

<p class="lead text-center">
    Get ready for the most exciting concerts and music festivals coming soon! Explore the incredible artists who will be performing and dive into their legacy, history, and the magic they bring to the stage. Discover the names and faces that are shaping the music world today.
</p>

<div class="container">
    @if (Model.Any())
    {
        <div class="row justify-content-center">
            @foreach (var ticket in Model)
            {
                <div class="col-md-8 mb-5">
                    <div class="card shadow-lg border-0" style="width: 100%; background-color: #f8f9fa;">
                        <div class="card-header text-white" style="background-color: #343a40;">
                            <h5 class="card-title">@ticket.EventName</h5>
                            <p class="card-subtitle mb-2 text-light">@ticket.EventDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <img src="https://picsum.photos/600/400?random=@ticket.Id" class="card-img" alt="Event Image" style="width: 100%; border-radius: 8px;">
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">About the Artist</h6>
                                    <p>
                                        Discover the world of <strong>John Legend</strong>, an American singer, songwriter, and activist. With hits like "All of Me" and "Ordinary People," John has become a symbol of soul and passion. His ability to connect with audiences worldwide through his powerful voice and evocative lyrics has made him a staple in contemporary music.
                                    </p>
                                    <h6 class="text-muted">Why We Love John Legend</h6>
                                    <ul>
                                        <li>His incredible vocal range and emotional depth</li>
                                        <li>His philanthropic efforts to promote social justice</li>
                                        <li>His Grammy-winning success and artistic influence</li>
                                    </ul>
                                    <p class="mt-4">
                                        <strong>Fun Fact:</strong><br>
                                        John Legend was the first African American man to win the coveted "EGOT" award (Emmy, Grammy, Oscar, Tony)!
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <p>Location: <strong>@ticket.Location</strong></p>
                            <p class="mb-0"><strong>Come join us for an unforgettable experience with @ticket.EventName!</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">No upcoming events at the moment. Stay tuned!</p>
    }
</div>

<style>
    /* Custom Styling for Upcoming and Past Events */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
        }

    .card-img {
        border-radius: 8px;
    }

    .card-header {
        background-color: #007bff; /* Bright blue header for better visibility */
        padding: 15px;
        border-radius: 8px 8px 0 0;
    }

    .card-body {
        font-family: 'Arial', sans-serif;
    }

    .card-footer {
        background-color: #f1f1f1;
    }
</style>
